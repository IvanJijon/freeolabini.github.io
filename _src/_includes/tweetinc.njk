<form class="black-80" action="https://twitter.com/intent/tweet">
  <div class="tr">
    <input type="hidden" name="url" value="https://freeolabini.org{{ path }}" />
    <input type="hidden" name="hashtag" value="FreeOlaBini" />
    {% if hidden %}
      <input type="hidden" name="text" value="{{ text | striptags | trim }}" />
    {% else %}
      <textarea name="text" class="db mb2 border-box hover-black w-100 h4 ba b--black-20" aria-describedby="comment-desc">{{ text | striptags | trim }}</textarea>
    {% endif %}
  </div>
  <div class="tr mb5">
    <input type="submit" value="tweet this!"/>
  </div>
</form>
